<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FundamentalAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_secondary</item>
        <item name="colorSecondaryVariant">@color/red_secondary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/blue_primary_light</item>
        <item name="android:background">@color/blue_primary_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabLayoutCustom">
        <item name="tabIndicatorColor">@color/red_secondary_light</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/red_secondary_light</item>
        <item name="tabBackground">@color/blue_primary_light</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Username">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Company">
        <item name="android:drawableStart">@drawable/ic_suitcase_svgrepo_com</item>
    </style>

    <style name="Location">
        <item name="android:drawableStart">@drawable/ic_location_icon</item>
    </style>

</resources>